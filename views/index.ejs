<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            margin: 0; /* Remove default margin */
            font-family: Arial, sans-serif; /* Set a default font */
            height: 100vh; /* Set height to 100% of the viewport height */
            display: flex; /* Use flexbox to center content */
            flex-direction: column; /* Stack children vertically */
            justify-content: center; /* Center content vertically */
            align-items: center; /* Center content horizontally */
            position: relative; /* Position relative for footer alignment */
        }
        .carousel {
            position: relative;
            width: 480px; /* Set width to 100% for responsiveness */
            max-width: 800px; /* Increase max width for larger screens */
            height: 800px; /* Set a fixed height for the carousel */
            overflow: hidden; /* Hide overflow */
            flex: 1; /* Allow the carousel to grow and take available space */
        }
        .carousel-images {
            display: flex; /* Use flexbox to arrange images */
            transition: transform 0.5s ease; /* Smooth transition for sliding */
            height: 480px; /* Set height to 100% for images */
        }
        .carousel img {
            width: 100%; /* Make images responsive */
            height: 100%; /* Set height to 100% to fill the carousel */
             /* Maintain aspect ratio and cover the container */
            display: block; /* Remove bottom space under images */
        }
        .carousel-button {
            position: absolute;
            top: 50%; /* Center vertically */
            transform: translateY(-50%); /* Center the button */
            background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent background */
            border: none; /* Remove border */
            padding: 10px; /* Add padding */
            cursor: pointer; /* Change cursor to pointer */
        }
        .prev {
            left: 10px; /* Position left button */
        }
        .next {
            right: 10px; /* Position right button */
        }
        footer {
            background-color: #F6FCDF;
            padding: 20px; /* Optional: Add some padding */
            text-align: center; /* Center the content */
            width: 100%; /* Ensure footer takes full width */
            position: fixed; /* Fix footer at the bottom */
            bottom: 0; /* Align footer to the bottom */
        }
        .get-started-button {
            background-color: #31511E; /* Button background color */
            color: white; /* Button text color */
            border: none; /* Remove default border */
            padding: 20px 30px; /* Add padding to the button */
            font-size: 24px; /* Font size */
            cursor: pointer; /* Change cursor to pointer on hover */
            border-radius: 10px; /* Increase rounded corners */
        }
        .get-started-button:hover {
            opacity: 0.8; /* Optional: Change opacity on hover */
        }
    </style>
</head>
<body>
    
    <div class="carousel">
        <div class="carousel-images">
            <img src="assets/img/recycling-image1.jpg" alt="Recycling Image 1">
            <img src="assets/img/recycling-image2.jpg" alt="Recycling Image 2">
            <img src="assets/img/recycling-image3.jpg" alt="Recycling Image 3">
        </div>
        <button class="carousel-button prev" onclick="moveSlide(-1)">❮</button>
        <button class="carousel-button next" onclick="moveSlide(1)">❯</button>
    </div>

    <footer>
        <a class="get-started-button"href="/start">Get Started</a>
    </footer>
    
    <script>
        let currentIndex = 0;
    
        function showSlide(index) {
            const slides = document.querySelectorAll('.carousel-images img');
            if (index >= slides.length) {
                currentIndex = 0;
            } else if (index < 0) {
                currentIndex = slides.length - 1;
            } else {
                currentIndex = index;
            }
            const offset = -currentIndex * 100; // Each image takes up 100% of the carousel width
            document.querySelector('.carousel-images').style.transform = `translateX(${offset}%)`;
        }
    
        function moveSlide(direction) {
            showSlide(currentIndex + direction);
        }
    
        // Automatically slide to the next image every 3 seconds
        setInterval(() => {
            showSlide(currentIndex + 1);
        }, 3000);
    
        // Initialize the carousel
        showSlide(currentIndex);
    
       
    </script>

</body>
</html>